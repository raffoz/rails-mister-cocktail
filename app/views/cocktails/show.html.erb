<div class="container-fluid">

  <div class="row wrapper">
  </div>

  <div class="row mx-5">
    <div class="col-12 col-md-5 col-lg-7">
    </div>

    <div class="col-12 col-md-7 col-lg-5 justify-content-center">
      <div class="card" style="width: 21rem;">
        <% if @cocktail.photo.attached? %>
          <%= cl_image_tag @cocktail.photo.key, class: "card-img-top", title: "New cocktail", alt: "New cocktail" %>
        <% else %>
          <%= image_tag "https://source.unsplash.com/random" , class: "card-img-top", title: "New cocktail", alt: "New cocktail" %>
        <% end %>
        <!-- <img class="card-img-top" src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg" alt="Card image cap"> -->
        <div class="card-body">

          <div class=title-one-line>
            <h5 class="card-title"><%= @cocktail.name %></h5>
            <span class="item mr-2">
              <%= link_to edit_cocktail_path(@cocktail) do %>
              <i class="far fa-edit"></i>
              <% end %>
            </span>
            <span>
              <%= link_to cocktail_path(@cocktail),
                method: :delete  do %>
                <i class="far fa-trash-alt"></i>
              <% end %>
            </span>
          </div>

          <% @cocktail.doses.each do |dose| %>
            <li>
              <div class="dose-one-line">
                <span>
                  <%= dose.ingredient.name + "Â " %>
                </span>
                <span class="dose-description-text">
                  <%= "(" + dose.description + ")" %>
                </span>
                <span class="item mr-2">
                  <%= link_to edit_dose_path(dose) do %>
                  <i class="far fa-edit"></i>
                  <% end %>
                </span>

                <span>
                  <%= link_to dose_path(dose),
                              method: :delete  do %>
                              <i class="far fa-trash-alt"></i>
                  <% end %>
                </span>
              </div>
            </li>
          <% end %>

<!--           <div class="mt-3">
            <%= simple_form_for(@cocktail) do |f| %>
              <%= f.input :photo, label: "Edit photo", as: :file %>
            <% end %>
          </div> -->

          <div class="button-create-back mt-4">
            <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
            <%= link_to "Back", cocktails_path, class: "btn btn-secondary" %>
          </div>

        </div>
      </div>
    </div>

</div>
